<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.fragments.onboarding.screens.ThirdScreen">

    <ImageView
        android:id="@+id/img_house"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/img_house"
        android:paddingVertical="48dp"
        android:paddingHorizontal="24dp"
        android:elevation="1dp"
        android:src="@drawable/img_house"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/background"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/bg_on_board_screen"
        android:contentDescription="@string/img_house"
        android:elevation="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/img_house"
        app:layout_constraintEnd_toEndOf="@+id/img_house"
        app:layout_constraintStart_toStartOf="@+id/img_house"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/progress"
        android:src="@drawable/ic_progress_dots_3"
        app:layout_constraintBottom_toTopOf="@+id/info_6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_house" />

    <TextView
        android:id="@+id/info_6"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/info_6"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginHorizontal="16dp"
        android:paddingVertical="8dp"
        app:layout_constraintBottom_toTopOf="@+id/info5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_house"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/info5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/info_5"
        android:textAlignment="center"
        android:textColor="@color/gray"
        android:textSize="18sp"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintBottom_toTopOf="@+id/next_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/info_6"
        app:layout_constraintVertical_chainStyle="packed" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/next_button"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_button"
        android:text="@string/login"
        android:textAllCaps="false"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/info5"
        app:layout_constraintTop_toBottomOf="@+id/img_house"
        app:layout_constraintVertical_bias="0.8" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/skip"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_stroke"
        android:text="@string/registration"
        android:textAllCaps="false"
        android:textColor="@color/green"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/info5"
        app:layout_constraintTop_toBottomOf="@+id/img_house"
        app:layout_constraintVertical_bias="0.8" />
</androidx.constraintlayout.widget.ConstraintLayout>